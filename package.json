{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.7",
    "@types/lodash.merge": "^4.6.6",
    "@types/node": "^14.0.24",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/styled-components": "^5.1.2",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "babel-jest": "^26.1.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "styled-components": "^5.1.1",
    "typedoc": "^0.17.8",
    "typedoc-plugin-exclude-references": "^1.0.0",
    "typedoc-plugin-lerna-packages": "^0.3.1",
    "typescript": "^3.9.7"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "no-console": 1,
      "prettier/prettier": 2,
      "no-case-declarations": 1,
      "@typescript-eslint/no-empty-interface": 1,
      "@typescript-eslint/no-empty-function": 1,
      "react/prop-types": 1,
      "react/display-name": 1
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && rimraf node_modules/@types/react-native",
    "build": "lerna run build --stream",
    "docs": "rimraf typedoc/docs && typedoc --options typedoc/typedoc.json --plugin typedoc-plugin-exclude-references,typedoc-plugin-lerna-packages",
    "docs:serve": "npm run docs && serve typedoc/docs",
    "lint": "eslint ./packages --ext .ts,.tsx",
    "lint-fix": "eslint ./packages --ext .ts,.tsx --fix",
    "start:core": "lerna run start --scope @doctorlink/traversal-core --stream",
    "start:redux": "lerna run start --scope @doctorlink/traversal-redux --stream",
    "start:sc": "lerna run start --scope @doctorlink/styled-components --stream",
    "test": "lerna run test --stream",
    "prepare": "npm run bootstrap && npm run build",
    "publish": "lerna publish from-package -y"
  }
}
